@model Quanlythuvien.Models.DocGia
@{
    ViewBag.Title = "Xóa độc giả";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>

    <div class="page-header">
        <div>
            <h1 class="font-weight-bold text-black" style="color:black">Xóa nhân viên</h1>
            <small>Trang chủ /Xóa nhân viên</small>
        </div>
    </div>

    <div class="page-content borrow-book-infomation">
        <div class="borrow-book-infomation-left">
            @using (Html.BeginForm(Html.BeginForm("XoaDG", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaDocGia)

                <fieldset style="width:400px">
                    <legend>Thông tin độc giả</legend>
                    <div class="borrow-book-item">
                        <span>Tên nhân viên:</span><br>
                        <input type="text" name="HoTen" value="@Model.TenDocGia"><br>
                    </div>
                    <div class="borrow-book-item">
                        <span>Ngày sinh:</span><br>
                        <input type="date" name="NgaySinh" value="@Model.NgaySinh.Value.ToString("yyyy-MM-dd")"><br>
                    </div>
                    <div class="borrow-book-item">
                        <span>Mã số:</span><br>
                        <input type="text" name="SDT" value="@Model.MaSo"><br>
                    </div>
                    <div class="borrow-book-item">
                        <span>Giới tính:</span><br>
                        <select name="GioiTinh">
                            <option value="Nam" @(Model.GioiTinh == "Nam" ? "selected" : "")>Nam</option>
                            <option value="Nữ" @(Model.GioiTinh == "Nữ" ? "selected" : "")>Nữ</option>
                        </select>
                    </div>
                </fieldset>
                <button class="btn btn-success btn-borrow-book" style="margin-top: 24px; margin-left: 150px" type="submit">Xóa</button>
            }
        </div>
    </div>
</main>
<script src="~/Scripts/app.js"></script>