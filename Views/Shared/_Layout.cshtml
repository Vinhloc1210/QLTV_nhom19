@{ 
    string actionName = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
    string controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    bool activeHome = actionName == "Index";
    bool activeHome1 = actionName == "DanhMucSach";
    bool activeHome2 = actionName == "Create";
    bool activeHome3 = actionName == "ListDocGia";
    bool activeHome4 = actionName == "QuanLiPhong";
    bool activeHome5 = actionName == "Quanlimuon";
    bool activeHome6 = actionName == "Quanlinv";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>Quản lý thư viện</title>
    <link href="~/CSS/style.css" rel="stylesheet" />
    <link href="~/CSS/style2.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/png" href="~/books.ico" />


    <!-- nhúng icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/clients/plugins/fontawesome-free/css/all.min.css">
    <!-- daterange picker -->
    <link rel="stylesheet" href="~/Content/clients/plugins/daterangepicker/daterangepicker.css">
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/Content/clients/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Bootstrap Color Picker -->
    <link rel="stylesheet" href="~/Content/clients/plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css">
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/Content/clients/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="~/Content/clients/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/Content/clients/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <!-- Bootstrap4 Duallistbox -->
    <link rel="stylesheet" href="~/Content/clients/plugins/bootstrap4-duallistbox/bootstrap-duallistbox.min.css">
    <!-- BS Stepper -->
    <link rel="stylesheet" href="~/Content/clients/plugins/bs-stepper/css/bs-stepper.min.css">
    <!-- dropzonejs -->
    <link rel="stylesheet" href="~/Content/clients/plugins/dropzone/min/dropzone.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/clients/dist/css/adminlte.min.css">
</head>
<body>
    <input type="checkbox" id="menu-toggle">

    <div class="sidebar" style="height:auto">
       
        <div class="side-header" style="background-color:transparent">
            <div class="brand-link">
                <img src="~/Content/clients/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8;margin-right:10px">
            </div>
            <br />

        </div>
        <div class="side-header" style="background-color:transparent">
            <span class="brand-text font-weight-light ri-home-6-fill" style="color:white;">Quản lý thư viện</span>
        </div>






        <div class="profile">
            <div><img src="~/img/@Session["HinhAnh"]" alt="Profile" class="rounded-circle" style="width:90px; height: 90px;border-radius:50%"></div>
            <h4>Quản lý</h4>
            <small>@Session["HoTen"]</small>
        </div>

        <!-- Menu -->
        <div class="side-menu"  >
            <ul >
                <li>
                    <a href="@Url.Action("Index","Home")" class=" hover-2 @(activeHome ? "active" : "")  ">
                        <span class="las la-home  "></span>
                        <small >Trang chủ</small>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("DanhMucSach","Home")" class="hover-2 @(activeHome1 ? "active" : "") ">
                        <span class="las la-book "></span>
                        <small>Danh mục sách</small>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Quanlimuon","Home")" class="hover-2 @(activeHome5 ? "active" : "") ">
                        <span><i class="las la-hand-holding-usd"></i></span>
                        <small>Mượn trả sách</small>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Create","Home")" class="hover-2 @(activeHome2 ? "active" : "") ">
                        <span><i class="las la-book-medical" style="font-size:26px"></i></span>
                        <small>Thêm sách</small>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Quanlinv","Home")" class="hover-2 @(activeHome6 ? "active" : "") ">
                        <span class="las la-user"></span>
                        <small>Quản lý nhân viên</small>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("ListDocGia","Home")" class="hover-2 @(activeHome3 ? "active" : "") ">
                        <span><i class="lar la-address-book"></i> </span>
                        <small>Quản lý độc giả</small>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("QuanLiTheThanhVien","Home")" class="hover-2 @(activeHome4 ? "active" : "") ">
                        <span><i class="lar la-id-card"></i></span>
                        <small>Quản lý thẻ</small>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <header>
            <div class="header-content">
                <label style="margin-top:12px" for="menu-toggle">
                    <span class="las la-bars"></span>
                </label>
                <div class="header-menu">
                    <div class="user">
                        <div style="margin-top:5px" class="bg-img"><img src="~/img/@Session["HinhAnh"]" alt="Profile" class="rounded-circle" style="width:30px; height: 30px;border-radius:50%"></div>
                        <span><i class="las la-sign-out-alt"  style="color:red;font-size:30px"></i></span>
                        <span><a  class="btn btn-block btn-outline-danger btn-sm" href="@Url.Action("Logout", "Home")">Đăng xuất</a></span>
                    </div>
                </div>
            </div>
        </header>
        @RenderBody()

    </div>
    <script src="~/Scripts/CustomeJS.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
